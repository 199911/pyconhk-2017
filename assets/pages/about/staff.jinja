{% extends "app.jinja" %}]

{% block content %}
    <div class="container">
        <h3>Staff</h3>
        <ul class="collapsible popout" data-collapsible="expandable">
          {% for team in data.staff.teams %}
          <li>
              <div class="collapsible-header active">{{team.name}}</div>
              <div class="collapsible-body">
                  <ul class="collection">
                      {% for member in team.members %}
                      <li class="collection-item">
                          <img src="{{ member.email | gravatar }}" alt="{{member.name}}" class="avatar" >
                          {{ member.name }} {% if member.teamlead %} (Team Lead) {% endif %}
                      </li>
                      {% endfor %}
                  </ul>
              </div>
          </li>
          {% endfor %}
        </ul>
    </div>
{% endblock %}
