{% extends "app.jinja" %}

{% block content %}
    <div class="container">
        <h2>Organizers</h2>
        <div class="row">
            <div class="col s12 l4">
                <a href="https://cota.hk" target="_blank">
                    <div class="card"><div class="card-content">
                        <div class="logo-wrapper">
                            <img class="responsive-img" src="https://file.hkoscon.org/organizer/cota.png" />
                        </div>
                        <div class="content">
                            <p class="center">Hong Kong Creative Open Technology Association</p>
                        </div>
                    </div></div>
                </a>
            </div>
            <div class="col s12 l4">
                <a href="https://opensource.hk" target="_blank">
                    <div class="card"><div class="card-content">
                        <div class="logo-wrapper">
                            <img class="responsive-img" src="https://file.hkoscon.org/organizer/oshk.png" />
                        </div>
                        <div class="content">
                            <p class="center">Open Source Hong Kong</p>
                        </div>
                    </div></div>
                </a>
            </div>
            <div class="col s12 l4">
                <a href="http://linux.org.hk" target="_blank">
                    <div class="card"><div class="card-content">
                        <div class="logo-wrapper">
                            <img class="responsive-img" src="https://file.hkoscon.org/organizer/hklug.jpg" />
                        </div>
                        <div class="content">
                            <p class="center">Hong Kong Linux User Group</p>
                        </div>
                    </div></div>
                </a>
            </div>
        </div>

        <h2>Support Organizers</h2>
        <div class="row">
            <div class="col s12 l4">
                <div class="card"><div class="card-content">
                    <div class="logo-wrapper">
                        <img class="responsive-img" src="https://file.hkoscon.org/support/sitcon.png">
                    </div>
                    <div class="content">
                        <p class="center">SITCON x HK</p>
                    </div>
                </div></div>
            </div>
        </div>
    </div>
{% endblock %}
