{% extends "app.jinja" %}

{% block style %}
    <link rel="stylesheet" href="https://openlayers.org/en/v3.20.1/css/ol.css" type="text/css">
    <style>.map {height: 400px; width: 60%; margin: 2rem auto;}</style>
{% endblock %}

{% block script %}
    <script src="http://maps.googleapis.com/maps/api/js?signed_in=true&language=en-GB" defer></script>
    <script src="/2017/js/venue.js" defer></script>
{% endblock %}

{% block content %}
    <div class="container">
        <h3>
            Cyberport 3, 100 Cyberport Road, Telegraph Bay
            <br>
            香港數碼港道100號數碼港三座
        </h3>
    </div>
    <div id="map" class="map"></div>

    <div class="container">
        <div class="row">
            <div class="col s12">
                <div class="card blue-theme yellow-theme-text">
                    <div class="title">
                        <h2 class="title-text headline">Bus Transportation</h2>
                    </div>
                    <div class="content">
                        <ul class="browser-default">
                            <li>
                                30X Central (via Pok Fu Lam, Wah Fu)
                                <a href="https://file.hkoscon.org/download/30x.pdf">
                                    Detail
                                </a>
                            </li>
                            <li>
                                73 Stanley (via Repulse Bay, Wong Chuk Hang, Aberdeen, Wah Fu)
                                <a href="https://file.hkoscon.org/download/73.pdf">
                                    Detail
                                </a>
                            </li>
                            <li>
                                970 So Uk Estate (via Sham Shui Po, Prince Edward, Mong Kok, Yau Ma Tei, Jordan)
                                <a href="https://file.hkoscon.org/download/970.pdf">
                                    Detail
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <div class="card">
                    <div class="title">
                        <h2 class="title-text headline">Minibus Transportation</h2>
                    </div>
                    <div class="content">
                        <ul class="browser-default">
                            <li>10 Causeway Bay (Jaffe Road)</li>
                            <li>58 Aberdeen - Cyberport - Kennedy Town (North Street)</li>
                            <li>69 Quarry Bay (Hoi Chak Street)</li>
                            <li>69A Aberdeen Main Road (outside St. Peter Secondary School)</li>
                            <li>69X Causeway Bay (Lockhart Road)</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}